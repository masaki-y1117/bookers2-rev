<div class="container">
  <div class="row">
    <div class="col-md-5 mx-auto">
    <h1>User info</h1>
    <%= form_with model:@user, local:true do |f| %>
      <div class="form-group">
        <label for="inputName" style="display: block;">Name</label>
        <%= f.text_field :name, class:"form-control name" %>
      </div>
      <div class="form-group">
        <label for="inputImage" style="display: block;">Image</label>
        <%= f.attachment_field :profile_image %>
      </div>
      <div class="form-group">
        <label for="inputIntroduction" style="display: block;">introduction</label>
        <%= f.text_area :introduction, class:"form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit "Update User", class:"btn btn-secondary" %>
      </div>
    <% end %>
    </div>
  </div>
</div>