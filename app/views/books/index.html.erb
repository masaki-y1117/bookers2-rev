<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <% link_to user_path(book.user.id) do %>
          <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no-images.jpg"%>
        <% end %>
        </td>
      <td>
        <% link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %>
        </td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>
