      <h1>User info</h1>
      <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no-image.jpg" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>
      
      <%= link_to "btn", edit_user_path(user), local: true, class: "btn btn-block active btn-outline-secondary" %>
      
      <h1>New book</h1>
      <%= form_with model: book, local:true do |f| %>
        <label for style="display: block;">Title</label>
        <%= f.text_field :title %>
        <label for style="display: block">Opinion</label>
        <%= f.text_area :body %>
        <%= f.submit "Create Book" %>
      <% end %>