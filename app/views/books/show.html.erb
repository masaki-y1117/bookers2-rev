<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td>
            <%= link_to user_path(@book.user) do %>
              <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback: "no-image.jpg", size:"40x40" %><br>
              <%= @book.user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(@book) do %>
              <%= @book.title %>
            <% end %>
          </td>
          <td><%= @book.body%></td>
          <td><%= link_to "Edit", edit_book_path(@book), local: true, class: "btn btn-success" %></td>
          <td><%= link_to "Destroy", book_path(@book), method: :delete, local: true, class: "btn btn-danger" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>