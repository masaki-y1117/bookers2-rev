<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
    <h1>Editing Book</h1>
  <%= form_with model:@book, local:true do |f| %>
    <div class="form-group">
      <label for="inputTitle">Title</label><br>
      <%= f.text_field :title, class:"form-control name" %>
    </div>
    <div class="form-group">
      <label for="inputbody">Body</label><br>
      <%= f.text_area :body, class:"form-control introduction" %>
    </div>
    <div class="form-group">
      <%= f.submit "Update User", class:"btn btn-success" %>
    </div>
  <% end %>
    <%= link_to "Show", book_path(@book) %>
    <span>|</span>
    <%= link_to "Back", books_path %>
    </div>
  </div>
</div>